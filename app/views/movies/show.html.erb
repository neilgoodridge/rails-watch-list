<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @movie.title %></h1>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">Overview</th>
            <td><%= @movie.overview %></td>
          </tr>
          <tr>
            <th scope="row">Poster</th>
            <td><%= @movie.poster_url %></td>
          </tr>
          <tr>
            <th scope="row">Rating</th>
            <td><%= @movie.rating %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <%= link_to "All Movies", movies_path, class: 'btn btn-primary' %>

  </div>
</div>
