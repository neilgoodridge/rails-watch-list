<div class="container">
  <div class="row align-center">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Add a new Movie</h1>
      <%= simple_form_for @movie do |f| %>
        <%= f.input :title %>
        <%= f.input :overview %>
        <%= f.input :poster_url %>
        <%= f.input :rating %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
